<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trash_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/ten_device_pixels"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/no_corners_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical"
            android:paddingBottom="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="start"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:background="@drawable/profilepic" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/user"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:autoSizeTextType="uniform"
                        android:maxLength="16"
                        android:ellipsize="end"
                        android:text=""/>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/date"
                        android:layout_gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:fontFamily="@font/montserrat_alternates"
                        app:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text=""/>
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/subject"
                    android:layout_gravity="start|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:fontFamily="@font/montserrat_alternates"
                    android:textSize="@dimen/lowest_description_size"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:autoSizeTextType="uniform"
                    android:text=""/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/edit"
                android:layout_gravity="start|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/description"
                    android:layout_gravity="start|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:fontFamily="@font/montserrat_alternates"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:autoSizeTextType="uniform"
                    android:text=""/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>