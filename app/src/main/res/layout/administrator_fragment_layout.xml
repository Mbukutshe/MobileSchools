<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EAEAEA"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/admin_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_device_pixels"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/five_device_pixels"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f5f5f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/message_layout_message"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/ten_device_pixels"
                android:paddingRight="@dimen/ten_device_pixels"
                android:paddingLeft="@dimen/ten_device_pixels"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Title Initials Surname"
                            android:textColor="@color/menuColor"
                            android:textSize="@dimen/large_subject_size"
                            android:ellipsize="end"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="wisemanmbukutshe@gmail.com"
                            android:textSize="@dimen/subject_text_size"
                            android:textColor="@color/menuColor"
                            android:ellipsize="end"/>
                    </FrameLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profilepic" />
                </FrameLayout>
            </LinearLayout>
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pointer_description"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/title_message"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:background="@drawable/no_corners_background"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:paddingBottom="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Birthday"
                                android:textColor="@color/menuColor"
                                android:textSize="@dimen/description_text_size"
                                android:ellipsize="end"/>
                            <TextView
                                android:id="@+id/birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="07/08"
                                android:textColor="@color/menuColor"
                                android:textSize="@dimen/description_text_size"
                                android:ellipsize="end"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:paddingBottom="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Gender"
                                android:textColor="@color/menuColor"
                                android:textSize="@dimen/description_text_size"
                                android:ellipsize="end"/>
                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="Male"
                                android:textColor="@color/menuColor"
                                android:textSize="@dimen/description_text_size"
                                android:ellipsize="end"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                app:backgroundTint="@color/white_color"
                app:layout_anchor="@id/attributes"
                app:layout_anchorGravity="top|end"
                app:fabSize="mini"
                app:srcCompat="@drawable/add"/>
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_device_pixels"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/five_device_pixels"
            app:contentPadding="@dimen/ten_device_pixels"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f5f5f5">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/admin_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>