<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white_color</item>
        <item name="android:actionMenuTextColor">@color/white_color</item>
    </style>
    <style name="logo">
        <item name="android:logo">@drawable/logo</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextInputThemeLayout" parent="@style/AppTheme">
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="TextInputLayout" parent="@style/AppTheme">
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>
    <style name="InputLayout" parent="@style/AppTheme">
        <item name="colorControlNormal">#EAEAEA</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">9pt</item>
    </style>
    <style name="MyPopup" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/menuColor</item>
    </style>
    <style name="TitleColor" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="sender_style" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">normal|italic</item>
        <item name="android:textColor">@color/menuColor</item>
    </style>
    <style name="Subject" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/menuColor</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#000</item>
    </style>
    <style name="Theme.NewGroup" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#000</item>
    </style>
    <style name="Theme.Overlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Clear" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:progressBarStyle">@android:style/Widget.Holo.Light.ProgressBar.Large</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

</resources>
