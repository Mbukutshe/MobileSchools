<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="InputLayout" parent="@style/AppTheme">
    <item name="colorControlNormal">#EAEAEA</item>
    <item name="android:textColorHint">#babdc1</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="android:textSize">@dimen/subject_text_size</item>
    </style>
    <style name="TextInputThemeLayout" parent="@style/AppTheme">
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="TextInputLayout" parent="@style/AppTheme">
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>
</resources>
