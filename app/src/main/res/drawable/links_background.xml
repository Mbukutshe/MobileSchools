<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#FFF"
                android:startColor="#FFF"
                android:endColor="#FFF"
                android:type="linear"
                />
            <padding
                android:left="@dimen/activity_horizontal_margin"
                android:top="10dp"
                android:right="@dimen/activity_horizontal_margin"
                android:bottom="10dp"
                />
            <size
                android:width="80dp"
                android:height="30dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#eaeaea"
                android:startColor="#eaeaea"
                android:endColor="#eaeaea"
                android:type="linear"
                />
            <padding
                android:left="@dimen/activity_horizontal_margin"
                android:top="10dp"
                android:right="@dimen/activity_horizontal_margin"
                android:bottom="10dp"
                />
            <stroke
                android:width="1dp"
                android:color="#fafafa"
                />
        </shape>
    </item>
</selector>